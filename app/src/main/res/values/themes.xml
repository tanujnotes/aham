<resources>

    <style name="Theme.Aham" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/twitter_primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/twitter_primary</item>
        <item name="colorSecondaryVariant">@color/twitter_primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>